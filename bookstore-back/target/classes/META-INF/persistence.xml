<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
     <persistence-unit name="bookStorePU">
     	<class>com.pluralsight.bookstore.models.Book</class>
        <properties>
            <property name="javax.persistance.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistance.schema-generation.scripts.action" value="drop-and-create"/>
            <property name="javax.persistance.schema-generation.scripts.create-target" value="bookStoreDrop.dll"/>
            <property name="javax.persistance.schema-generation.scripts.drop-target" value="bookStoreDrop.dll"/>
        </properties>
     </persistence-unit>
</persistence>